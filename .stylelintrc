{
    "extends": "stylelint-config-standard",
    "rules": {
        "at-rule-no-unknown": [ true, {
            "ignoreAtRules": [
                "extends",
                "ignores"
            ]
        }],
        "indentation": "4",
        "number-leading-zero": null,
        "unit-whitelist": ["em", "rem", "px"]
    }
}